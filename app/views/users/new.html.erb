<div class="container">
<h1>Sign Up</h1>
  <%= form_for @user do |f| %>

    <%= f.label :email %>
    <%= f.email_field :email, :required => true %>
    <%= f.label :password %>
    <%= f.password_field :password, :required => true %>

    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation, :required => true %>
    <%= f.submit "signup" %>
  <% end %>
</div>
